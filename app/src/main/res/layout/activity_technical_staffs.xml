<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/color_surface"
    tools:context=".Department.ICE.People.TechnicalStaffsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextView_black_to_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".87"
            android:fontFamily="@font/rubik_bold"
            android:gravity="center"
            android:text="Technical Staffs"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cut_corner_four_side"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cut_corner_four_side"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_Shams"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    style="@style/ripple_color">

                    <LinearLayout
                        android:id="@+id/rubaiyat"
                        style="@style/sub_menu_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="20dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Md. Shams Tabrig"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Headline6"
                                android:textSize="18sp" />

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".67"
                                android:fontFamily="@font/rubik_regular"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Asst. Technical Officer"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Caption"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img3"
                            android:transitionName="imgtransition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            style="@style/color_circleimg"
                            app:civ_border_width="2dp"
                            android:src="@drawable/shams" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_Raton"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    android:elevation="5dp"
                    app:cardUseCompatPadding="true"
                    style="@style/ripple_color">

                    <LinearLayout
                        android:id="@+id/basar"
                        style="@style/sub_menu_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="20dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Md. Raton Hosen"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Headline6"
                                android:textSize="18sp" />

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".67"
                                android:fontFamily="@font/rubik_regular"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Lab Assistant"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Caption"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img4"
                            android:transitionName="imgtransition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            style="@style/color_circleimg"
                            app:civ_border_width="2dp"
                            android:src="@drawable/raton" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_Manik"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    style="@style/ripple_color">

                    <LinearLayout
                        android:id="@+id/partha"
                        style="@style/sub_menu_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="0dp"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4.5"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp">

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginVertical="20dp"
                                android:alpha=".87"
                                android:fontFamily="@font/rubik_medium"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Md. Manik Hossain"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Headline6"
                                android:textSize="17sp" />

                            <TextView
                                style="@style/TextView_black_to_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:alpha=".67"
                                android:fontFamily="@font/rubik_regular"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="2dp"
                                android:text="Lab Assistant"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.BAUET.Caption"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img5"
                            android:transitionName="imgtransition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            style="@style/color_circleimg"
                            app:civ_border_width="2dp"
                            android:src="@drawable/manik" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>