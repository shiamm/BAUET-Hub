                <TextView
                    style="@style/TextView_black_to_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:alpha=".77"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:lines="1"
                    android:text="Wheel: Progress"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.BAUET.Subtitle1"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextView_black_to_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:alpha=".97"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:text="Cross Sword with Water Lily: Symbol of Bangladesh Army with national flower. It signifies Army sponsorship."
